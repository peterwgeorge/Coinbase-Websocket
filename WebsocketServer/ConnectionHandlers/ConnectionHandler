namespace WebsocketServer.ConnectionHandlers;

using System.Text;
using System.Net.WebSockets;
using Newtonsoft.Json;

public class ConnectionHandler{
    
    public ClientWebScoket Socket;
    public string Source;

    public ConnectionHandler(ClientWebSocket socket, string source)
    {
        Socket = socket;
        Source = source;
    }
    
    public async Task Connect(ClientWebSocket socket, string feed){
        Uri uri = new Uri(feed);
        await socket.ConnectAsync(uri, CancellationToken.None);
        Console.WriteLine($"Connected to {Source} WebSocket feed {feed}.");
    }

    public async Task Subscribe(ClientWebSocket socket, string channel, string[] product_ids)
    {
        KrakenMarketDataRequest request = new(KrakenMethodTypes.Subscribe, product_ids, channel);
        string json = JsonConvert.SerializeObject(request);
        Console.WriteLine($"Sending {Source} request message:");
        Console.WriteLine(json);

        var bytesToSend = new ArraySegment<byte>(Encoding.UTF8.GetBytes(json));
        await socket.SendAsync(bytesToSend, WebSocketMessageType.Text, true, CancellationToken.None);
    }

    public async Task Receive(ClientWebSocket socket, byte[] buffer)
    {
        var result = await socket.ReceiveAsync(new ArraySegment<byte>(buffer), CancellationToken.None);
        if (result.MessageType == WebSocketMessageType.Close)
        {
            Console.WriteLine($"{Source} WebSocket closed.");
            await socket.CloseAsync(WebSocketCloseStatus.NormalClosure, string.Empty, CancellationToken.None);
        }
        else
        {
            string message = Encoding.UTF8.GetString(buffer, 0, result.Count);
            Console.WriteLine($"Received from {Source}: " + message);

            await RelayServer.BroadcastToClientsAsync(message);
        }
    }
}